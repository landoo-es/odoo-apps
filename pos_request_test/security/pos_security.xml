<?xml version="1.0" encoding="utf-8"?>
<odoo>

<!--<data noupdate="1">-->
<data>

    <!-- USUARIO DE TPV, solo documentos de su TPV -->

    <record id="pos_request_personal_rule" model="ir.rule">
        <field name="name">Bakery 6 Encargos de TPV propios</field>
        <field ref="pos_request_test.model_pos_request" name="model_id"/>
        <field name="domain_force">[('pos_session_id.config_id.group_pos_user_id.users','in',user.id)]</field>
        <field name="groups" eval="[(4, ref('point_of_sale.group_pos_user'))]"/>
    </record>
    <record id="pos_request_line_personal_rule" model="ir.rule">
        <field name="name">Bakery 7 Lineas de encargos de TPV propios</field>
        <field ref="pos_request_test.model_pos_request_line" name="model_id"/>
        <field name="domain_force">[('request_id.pos_session_id.config_id.group_pos_user_id.users','in',user.id)]</field>
        <field name="groups" eval="[(4, ref('point_of_sale.group_pos_user'))]"/>
    </record>

    <!-- RESPONSABLE DE TPV, todos los documentos -->

    <record id="pos_request_all_rule" model="ir.rule">
        <field name="name">Bakery 6 Encargos de TPV todos</field>
        <field ref="pos_request_test.model_pos_request" name="model_id"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('point_of_sale.group_pos_manager'))]"/>
    </record>
    <record id="pos_request_line_all_rule" model="ir.rule">
        <field name="name">Bakery 7 Lineas de encargos de TPV todos</field>
        <field ref="pos_request_test.model_pos_request_line" name="model_id"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('point_of_sale.group_pos_manager'))]"/>
    </record>

</data>
</odoo>
